<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="1.6.0" method="upgrade">
	<name>DSM</name>
	<creationDate>16 April 2012</creationDate>
	<author>DSM</author>
	<authorEmail></authorEmail>
	<authorUrl>http://www.desitemakers.be</authorUrl>
	<copyright>Copyright(c) 2012 DSM</copyright>
	<license>GNU/GPL v.2</license>

	<version>1.0</version>
	<!-- The description is optional and defaults to the name -->
	<description>DSM Custom Component</description>

    <install>
	</install>
    <uninstall>
	</uninstall>
	<update>
	</update>

	<!-- Site Main File Copy Section -->
	<!-- Note the folder attribute: This attribute describes the folder
		to copy FROM in the package to install therefore files copied
		in this section are copied from /site/ in the package -->
	<files folder="site">
		<filename>index.html</filename>
        <filename>controller.php</filename>
		<filename>dsm.php</filename>
        <filename>router.php</filename>
        <folder>controllers</folder>
        <folder>models</folder>
        <folder>views</folder>
	</files>
    <languages folder="site/language">
	</languages>

	<administration>
		<files folder="admin">
			<!-- Admin Main File Copy Section -->
			<filename>index.html</filename>
            <filename>config.xml</filename>
			<filename>dsm.php</filename>
            <filename>index.html</filename>
		</files>
		
		<!-- Language files -->
		<languages folder="admin/language">
		</languages>
	</administration>

</extension>

